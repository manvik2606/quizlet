

.social-icon {
 
  height: 46px;
  width: 46px;
  display: inline-block;
  top:50%;
  justify-content: center;
  align-items: center;
  margin:10px;
  color: #333;
  border-radius: 50%;
  border: 1px solid #333;
  text-decoration: none;
  font-size: 1.1rem;
 transition: 0.3s;
}
.sign-up-form
{
	width:350px;
	box-shadow:0 0 3px 0 rgba(0,0,0,0.3);
	background:white;
	padding:20px;
	margin:3% auto 0;
	border-radius:15px; 
	text-align:center;
}
.sign-up-form h1
{
	color:#1c8adb;
	margin-bottom:0px;
}
.input-box
{
	border-radius:0px 20px 20px 0px;
	
	padding:10px;
	margin:10px 0;
	z-index:100;
	width:87%;
	position:relative;
	left:1px;
	
	border:1px solid #999;
	outline:none;
	-webkit-box-shadow:0px 5px 20px -14px rgba(0,0,0,0.7);
	-moz-box-shadow:0px 5px 20px -14px rgba(0,0,0,0.7);
	box-shadow:0px 5px 20px -14px rgba(0,0,0,0.7);
}
.input-box1
{
	border-radius:5px 5px 5px 5px;
	
	padding:10px;
	margin:10px 0;
	z-index:100;
	width:87%;
	position:relative;
	left:1px;
	height:50px;
	border:1px solid #999;
	outline:none;
	-webkit-box-shadow:0px 5px 20px -14px rgba(0,0,0,0.7);
	-moz-box-shadow:0px 5px 20px -14px rgba(0,0,0,0.7);
	box-shadow:0px 5px 20px -14px rgba(0,0,0,0.7);
}
.input-field i
{
	padding:7px 8px 11px 8px;
	vertical-align:middle;
	border:1.5px solid #999;
	border-right:0px;
	border-radius:20px 0px 0px 20px;
	position:relative;
	left:5px;
	top:0px;
	transition:0.3s;
}
.psw-box .i1
{
	position:relative;
	right:20px;
	top:20px;
	z-index:100;
	left:-30px;
	transition:0.3s;
}
.psw-box .i2
{
	border:1.5px solid #999;
	border-right:0px;
	border-radius:20px 0px 0px 20px;
	padding:7px 8px 11px 8px;
	position:relative;
	
	left:5px;
	z-index:10;
	top:0px;
	transition:0.3s;
}
button
{
	color:#fff;
	width:100%;
	padding:10px;
	border-radius:20px;
	font-size:15px;
	margin:10px 0;
	border:none;
	outline:none;
	cursor:pointer;
	
}
.signup-btn
{
	background-color:#1c8adb;
}
.SaveUpdate-btn
{
	background-color:#f5bf42;
	width:120px;
	border-radius:5px 5px 5px 5px;
}
.eye
{
	position:absolute;
}
#hide1
{
	display:none;
}
#hide3
{
	display:none;
}

.or
{
	background:#fff;
	width:30px;
	margin:-19px auto 10;
}
	
.social-text {
  padding: 0.3rem 0;
  font-size: 1rem;
}

.social-media {
  display: flex;
  justify-content: center;
  
  transform:translate(-0%,-50%);
}
.social-media a i{
  position:relative;
	top:11px;
	left:2px;
	font-size:25px;
  
  
}



.social-icon:hover {
  color: #4481eb;
  border-color: #4481eb;
}
